{
  "manifest_version": 3,
  "name": "TruthLens",
  "version": "1.2",
  "description": "Captures selected text or uses speech-to-text (System Audio).",
  "permissions": [
    "activeTab",
    "scripting",
    "tabCapture",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  }
}